
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card-block {
        padding: 2.7rem;
    }
</style>
<!-- Main content starts -->
<div class="container-fluid">
    <!-- Header Starts -->
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Usuarios</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="#">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Proyecto </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#"> Editar Usuario </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <!-- Header end -->
    <!-- Tables start -->
    <!-- Row start -->
    <div class="row">
        <div class="col-sm-12">
            <!-- Tickets abiertos -->
            <div class="card">
                <div class="card-header">

                    <div class="row">
                        <div class="col-sm-8 col-md-9 col-lg-10">
                            <h5 class="card-header-text">Editar Usuario</h5>
                            <p>Edita los datos del usuario</p>
                        </div>

                    </div>
                </div>
                <div class="card-block">
                    <div class="row">
                        <h4 style="text-align: center">Datos de Cuenta</h4>
                        <hr />
                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleSelect1" class="form-control-label">Tipo Usuario</label>
                                    <select class="form-control " id="selectRol" onchange="Cuadrilla()">
                                        <option value="0">Seleccionar</option>
                                        @foreach (var item in ViewBag.Roles)
                                        {
                                            <option value="@item.Id" @(item.Id == ViewBag.User.Usuario.Cat_Rol.Id ? "selected" : "")>@item.Nombre</option>
                                          
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div id="Cuadrilla" class="form-group" style="display:none">
                                    <label for="exampleSelect1" class="form-control-label">Cuadrilla</label>
                                    <select class="form-control" id="selectCuadrilla">
                                        <option value="0">Seleccionar</option>
                                        @{
                                            if (ViewBag.Cuadrilla != null)
                                            {
                                                foreach (var item in ViewBag.Cuadrilla)
                                                {
                                                    <option value="@item.Id" @(ViewBag.User.Usuario.Cuadrilla != null && item.Id == ViewBag.User.Usuario.Cuadrilla.Id ? "selected" : "")>
                                                        @item.Nombre
                                                    </option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            @*<div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputPassword1" class="form-control-label">Contraseña</label>
                                    <input type="password" class="form-control" id="Contraseña" placeholder="Password">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputPassword1" class="form-control-label">Confirmar contraseña</label>
                                    <input type="password" class="form-control" id="Contraseña2" placeholder="Password">
                                </div>
                            </div>*@
                        </div>

                        <h4 style="text-align: center">Información de Usuario</h4>
                        <hr />
                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    <input type="text" id="Nombre" class="form-control letras" placeholder="Nombre" value="@ViewBag.User.Persona.Nombre">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" id="ApellidoP" class="form-control letras" placeholder="Apellido Paterno" value="@ViewBag.User.Persona.ApellidoPaterno">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" id="ApellidoM" class="form-control letras" placeholder="Apellido Materno" value="@ViewBag.User.Persona.ApellidoMaterno">
                                </div>
                            </div>
                        </div>

                        <h4 style="text-align: center">Información de Contacto</h4>
                        <hr />

                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label for="example-search-input" class="col-xs-3 col-form-label form-control-label">Tipo Correo</label>
                                    <div class="col-sm-9">
                                        <select class="form-control " id="SelectCorreo">
                                            <option value="0">Seleccionar</option>
                                            @foreach (var item in ViewBag.Emails)
                                            {
                                                <option value="@item.Id" @(item.Id == ViewBag.User.Email.Cat_TipoEmail.Id ? "selected" : "")>
                                                    @item.Nombre.ToUpper()
                                                </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-email"></i></span>
                                    <input type="email" class="form-control" id="Email" placeholder="Email" value="@ViewBag.User.Email.Email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label for="example-search-input" class="col-xs-3 col-form-label form-control-label">Tipo Telefono</label>
                                    <div class="col-sm-9">
                                        <select class="form-control " id="SelectTelefono">
                                            <option value="0">Seleccionar</option>
                                            @foreach (var item in ViewBag.Telefonos)
                                            {
                                                <option value="@item.Id" @(ViewBag.User?.Telefono != null && item.Id == ViewBag.User.Telefono.Cat_TipoTelefono.Id ? "selected" : "")>
                                                    @item.Nombre.ToUpper()
                                                </option>
                                            }

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-ui-cell-phone"></i></span>
                                    <input type="text" class="form-control" id="Telefono" placeholder="Telefono" value="@ViewBag.User?.Telefono?.Telefono">
                                </div>
                            </div>
                        </div>




                    </div>
                    <div class="form-group row" style="display: flex; justify-content: flex-end;">
                        <div class="col">
                            <button onclick="Guardar()" type="button" class="btn btn-primary waves-effect waves-light">Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Basic Table ends -->
        </div>
    </div>
</div>

<!-- Main content ends -->


<script src="~/js/Persona/Editar.js"></script>
