
@{
    ViewData["Title"] = "Nueva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-block {
        padding: 3.25rem;
    }
</style>
<!-- Main content starts -->
<div class="container-fluid">
    <!-- Header Starts -->
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Usuarios</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="#">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Proyecto </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#"> Nuevo Usuario </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <!-- Header end -->
    <!-- Tables start -->
    <!-- Row start -->
    <div class="row">
        <div class="col-sm-12">
            <!-- Tickets abiertos -->
            <div class="card">
                <div class="card-header">

                    <div class="row">
                        <div class="col-sm-8 col-md-9 col-lg-10">
                            <h5 class="card-header-text">Usuarios</h5>
                            <p>Completa los campos indicados para crear un nuevo usuario</p>
                        </div>

                    </div>
                </div>
                <div class="card-block">
                    <div class="row">
                        <h4 style="text-align: center">Seguridad de la cuenta</h4>
                        <hr />

                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleSelect1" class="form-control-label">Tipo Usuario</label>
                                    <select class="form-control " id="selectRol" onchange="Cuadrilla()">
                                        <option value="0">Seleccionar</option>
                                        @foreach (var item in ViewBag.Roles)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                </div>

                                <div id="Cuadrilla" class="form-group" style="display:none">
                                    <label for="exampleSelect1" class="form-control-label">Cuadrilla</label>
                                    <select class="form-control " id="selectCuadrilla">
                                        <option value="0">Seleccionar</option>
                                        @{
                                            if (ViewBag.Cuadrilla != null)
                                            {
                                                foreach (var item in ViewBag.Cuadrilla)
                                                {
                                                    <option value="@item.Id">@item.Nombre</option>
                                                }
                                            }
                                        }
                                       
                                    </select>
                                </div>
                            </div>
                            @*CONTRASEŃAS*@
                            <div class="col-md-4">
                                <label for="exampleInputPassword1" class="form-control-label">Contraseña</label>
                                <div class="input-group">
                                    <input type="password" id="Contraseña" class="form-control" placeholder="Password">
                                    <span class="input-group-addon eye-icon"><i class="icofont icofont-eye-blocked"></i></span>
                                </div>


                                <div class="m-0 vh-100 row justify-content-center align-items-center">
                                    <span style="margin-top: 5px; width: 100%;" id="estado1" class="label label-info m-t--10"><strong>Seguridad de contraseña</strong></span>
                                    <span style="margin-top: 5px; width: 100%;" id="estado2" class="label label-danger m-t--10"><strong>Seguridad: Débil</strong></span>
                                    <span style="margin-top: 5px; width: 100%;" id="estado3" class="label label-warning"><strong>Seguridad: Buena</strong></span>
                                    <span style="margin-top: 5px; width: 100%;" id="estado4" class="label label-success"><strong>Seguridad: Fuerte</strong></span>
                                </div>

                                <div id="popover-pass">
                                    <p style="display:none"><span id="result"></span></p>
                                    <div class="progress">
                                        <div id="password-strenght" class="progress-bar"
                                             role="progressbar" aria-valuenow="40"
                                             aria-valuemin="0" aria-valuemax="100"
                                             style="width:0%">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <label for="exampleInputPassword1" class="form-control-label">Confirmar Contraseña</label>
                                <div class="input-group">
                                    <input type="password" id="Contraseña2" class="form-control" placeholder="Password">
                                    <span class="input-group-addon eye-icon2"><i class="icofont icofont-eye-blocked"></i></span>
                                </div>
                            </div>
                        </div>

                        @*CONTRASEŃAS*@

                        <h4 style="text-align: center">Información de Usuario</h4>
                        <hr />
                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-ui-user"></i></span>
                                    <input type="text" id="Nombre" class="form-control letras" placeholder="Nombre">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" id="ApellidoP" class="form-control letras" placeholder="Apellido Paterno">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="input-group">
                                    <input type="text" id="ApellidoM" class="form-control letras" placeholder="Apellido Materno">
                                </div>
                            </div>
                        </div>

                        <h4 style="text-align: center">Información de Contacto</h4>
                        <hr />

                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label for="example-search-input" class="col-xs-3 col-form-label form-control-label">Tipo Correo</label>
                                    <div class="col-sm-9">

                                        <div class="input-group">
                                            <select class="form-control " id="SelectCorreo">
                                                <option value="0">Seleccionar</option>
                                                @{
                                                    if (ViewBag.Emails != null)
                                                    {
                                                        foreach (var item in ViewBag.Emails)
                                                        {
                                                            <option value="@item.Id">@item.Nombre</option>
                                                        }
                                                    }
                                                }

                                            </select>
                                            @*<span class="input-group-addon"><i class="icofont icofont-email"></i></span>*@
                                        </div>
                                  
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-email"></i></span>
                                    <input type="email" class="form-control" id="Email" placeholder="Email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label for="example-search-input" class="col-xs-3 col-form-label form-control-label">Tipo Teléfono</label>
                                    <div class="col-sm-9">
                                        <select class="form-control " id="SelectTelefono">
                                            <option value="0">Seleccionar</option>
                                            @{
                                                if (ViewBag.Telefonos != null)
                                                {
                                                    foreach (var item in ViewBag.Telefonos)
                                                    {
                                                        <option value="@item.Id">@item.Nombre</option>
                                                    }
                                                }
                                            }

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icofont icofont-ui-cell-phone"></i></span>
                                    <input type="text" class="form-control" id="Telefono" placeholder="Teléfono">
                                </div>
                            </div>

                        </div>

               

                    </div>
                    <div class="form-group row" style="display: flex; justify-content: flex-end;">
                        <div class="col">
                            <button onclick="Guardar()" type="button" class="btn btn-primary waves-effect waves-light">Guardar</button>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Basic Table ends -->
        </div>
    </div>
</div>

<!-- Main content ends -->


<script src="~/js/Persona/Nueva.js"></script>

