
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input[type="color"] {
        border-radius: 2px;
    }

    #signature-pad {
/*        border:1px solid black;*/
    }
    .modal-footer {
        padding: 14px;
        text-align: center;
        border-top: 1px solid #E5E5E7;
    }
    .modal-footer .btn {
        margin: 3px;
    }
</style>
<!-- Main content starts -->
<div class="container-fluid">
    <!-- Header Starts -->
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Firma Electronica TEST</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item">
                        <a href="#">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Proyecto </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#"> Firma </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <!-- Header end -->
    <!-- Tables start -->
    <!-- Row start -->
    <div class="row">
        <div class="col-sm-12">
            <!-- Tickets abiertos -->
            <div class="card">
                <div class="card-header">

                    <div class="row">
                        <div class="col-sm-8 col-md-9 col-lg-10">
                            <h5 class="card-header-text">Firma</h5>
                            <p>Selecciona el documento a firmar</p>
                        </div>

                    </div>
                </div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-12">
                            <button onclick="NuevaFirma()" type="button" class="btn btn-primary waves-effect waves-light" data-original-title=".icofont-search-alt-2">
                                <i class="icofont icofont-plus"></i> <span class="m-l-10">Nueva Firma</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12" style="display: flex; justify-content: center; align-items: center;">
                            <img id="imagenFirma" />
                        </div>
                    </div>

                </div>
            </div>
            <!-- Basic Table ends -->
        </div>
    </div>
</div>

<!-- Main content ends -->
<!-- Modal firma -->
<div class="modal fade" id="ModalFirma" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog bd-example-modal-sm" role="document">
        <div class="modal-content" id="ModalFirmaSize"  overflow: hidden;>
            <form onsubmit="return false;" action="#" id="EmpresaAtencion">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Nueva Empresa Atención </h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="example-color-input" class="col-xs-2 col-sm-1 col-form-label form-control-label">
                        Color: </label>
                        <div class="col-sm-10">
                            <input type="color" id="colorPicker" name="favcolor" value="#000000">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-2 col-lg-2">
                            <canvas id="signature-pad"></canvas>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default waves-effect waves-light  " data-dismiss="modal">
                        <i class="icofont icofont-close-squared-alt"></i><span class="m-l-12"> Cancelar </span>
                    </button>

                    <button onclick="LimpiarFirma()" type="button" class="btn btn-primary waves-effect waves-light " data-original-title=".icofont-home">
                        <i class="icofont icofont-brush"></i><span class="m-l-12"> Limpiar </span>
                    </button>
                    <button onclick="atras()" type="button" class="btn btn-primary waves-effect waves-light " data-original-title=".icofont-home">
                        <i class="icofont icofont-undo"></i><span class="m-l-12"> Atras </span>
                    </button>

                    <button onclick="saveSignature()" type="button" class="btn btn-primary waves-effect waves-light " data-original-title=".icofont-home">
                        <i class="icofont icofont-save "></i><span class="m-l-12"> Registrar </span>
                    </button>

                </div>
            </form>
        </div>
    </div>
</div>



<script src="~/assets/js/signature_pad.umd.js"></script>
<script src="~/js/Administracion/FirmaElectronica/FirmaElectronica.js"></script>
