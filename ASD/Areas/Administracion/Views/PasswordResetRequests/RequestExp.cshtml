
@{
    ViewData["Title"] = "RequestExp";
    Layout = "~/Views/Shared/_LayoutPassword.cshtml";
}


<style>
    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f2f2f2;
        position: relative; /* Permitirá posicionar la imagen */
    }

    form {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        position: relative; /* Asegura que el contenido de dentro del form no se salga */
        z-index: 1; /* Asegura que el formulario esté por encima de la imagen */
        text-align: center;
    }

    input[type="email"] {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .enviar {
        width: calc(100% - 20px);
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .enviar:hover {
            background-color: #0056b3;
        }


    .imagen {
        width: 100px;
        margin-bottom: 20px; /* Agrega espacio entre la imagen y el resto del contenido */
    }

    /* Agrega espacio entre los elementos */
    h2, p, .enviar {
        margin-bottom: 10px;
    }
</style>


<!-- Formulario de expiracion de Token-->
<form>
    <img class="imagen" src="/assets/images/codi.png" alt="Imagen">
    <h2>Clave de Acceso Expirado</h2>
    <p>Estimado Usuario, queremos informarte que tu token de acceso ha expirado.</p>
    <input class="enviar" type="button" onclick="Clave()" value="Entendido">
</form>



<script>
    function Clave() {
        window.location.href = '/Administracion/PasswordResetRequests/RecuperarPass';
    }
</script>

