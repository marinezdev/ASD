
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content starts -->
<div class="container-fluid">
    <!-- Header Starts -->
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header">
                <h4>Ticket: @ViewBag.Ticket.Folio.Folio </h4>
            </div>
        </div>
    </div>
    <!-- Header end -->
    <!-- Tables start -->
    <!-- Row start -->
    <div class="row">
        <div class="col-sm-12">
            <!-- Tickets abiertos -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text text-center"> Check list de actividades por equipo  </h5>
                    <p>La rutina de atención son obligatorias por equipo, separadas por el número de serie </p>
                </div>
                <div class="card-block">
                    <div class="row">
                        @{
                            if (ViewBag.RutinaImg != null)
                            {
                                foreach (var item in ViewBag.RutinaImg)
                                {
                                    <div class="col-sm-12">
                                        <div class="panel panel-primary" style="border-color: #2196F3;">
                                            <div class="panel-heading bg-primary">
                                                @item.Equipo.Serie
                                            </div>
                                            <div class="panel-body" style="padding: 15px;">
                                                @{
                                                    if (item.ticketEquipoRutina != null)
                                                    {
                                                        foreach (var ItemRutina in item.ticketEquipoRutina)
                                                        {
                                                            <div class="row">
                                                                <div class="checkbox checkbox-primary">
                                                                    <div class="col-md-12">
                                                                        @{
                                                                            if (@ItemRutina.Estatus ==1)
                                                                            {
                                                                                <input type="checkbox" id="chkremeberme@{ @ItemRutina.Id}" onchange="CheckCambio(@ItemRutina.Id)" checked>
                                                                            }
                                                                            else
                                                                            {
                                                                                <input type="checkbox" id="chkremeberme@{ @ItemRutina.Id}" onchange="CheckCambio(@ItemRutina.Id)">
                                                                            }
                                                                        }
                                                                        
                                                                        <label for="chkremeberme@{ @ItemRutina.Id}" class="m-b-10">@ItemRutina.Cat_EquipoRutina.Nombre</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </div>
                                            <div class="panel-footer txt-primary">
                                                @item.Equipo.Serie
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <button type="submit" class="btn btn-default waves-effect waves-light col-xl-6 " data-original-title=".icofont-home" style="width:49%" onclick="Anterior(@ViewBag.Ticket.Ticket.Id)">
                            <i class="icofont icofont-arrow-left"></i><span class="m-l-12"> Anterior </span>
                        </button>

                        <button type="button" class="btn btn-primary waves-effect waves-light col-xl-6 " data-original-title=".icofont-home" style="width:49%" onclick="Siguiente(@ViewBag.Ticket.Ticket.Id)">
                            <span class="m-l-12"> Siguiente </span> <i class="icofont icofont-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Basic Table ends -->
        </div>
    </div>
</div>

<!-- Main content ends -->
<script src="~/js/ticketatencion/movil/_checklist.js"></script>